<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. Load Application Name (e.g., 'users') -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="app"/>

    <!-- 2. Load Log Directory (e.g., 'logs' or via ENV 'APP_LOG_DIR') -->
    <springProperty scope="context" name="logPath" source="app.log.dir" defaultValue="logs"/>

    <!-- 3. Standard Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- Result: logs/users.log -->
        <file>${logPath}/${appName}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Result: logs/archived/users-2023-10-27.0.log.gz -->
            <fileNamePattern>${logPath}/archived/${appName}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 4. Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 5. Root Logger -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>